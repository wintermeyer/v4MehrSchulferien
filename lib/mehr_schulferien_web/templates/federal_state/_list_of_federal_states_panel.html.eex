<%= if assigns[:federal_states] do %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">BundeslÃ¤nder</h3>
    </div>
    <div class="panel-body">
      <ul>
      <%= for federal_state <- @federal_states do %>
        <li>
          <%= if assigns[:federal_state] && federal_state != @federal_state do %>
            <a href="/federal_states/<%= federal_state.slug %><%= if assigns[:year] do %>/years/<%= @year.slug %><% end %>">
              <%= federal_state.name %>
            </a>
          <% else %>
            <%= if assigns[:federal_state] && federal_state == @federal_state do %>
              <%= federal_state.name %>
            <% else %>
              <a href="/federal_states/<%= federal_state.slug %><%= if assigns[:year] do %>/years/<%= @year.slug %><% end %>">
                <%= federal_state.name %>
              </a>
            <% end %>
          <% end %>
          <br />
          <small>
            <% years = [2017, 2018, 2019] %>
            <%= for year <- years do %>
              <a href="/federal_states/<%= federal_state.slug %>/years/<%= year %>"><%= year %></a>
              <%= unless year == List.last(years) do %> - <% end %>
            <% end %>
          </small>
        </li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>
