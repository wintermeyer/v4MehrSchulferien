<ol class="breadcrumb">
  <li><a href="/index.html">Startseite</a></li>
    <li><a href="/federal_states/<%= @federal_state.slug %>">Brandenburg</a></li>
    <li class="active"><%= @year.value %></li>
</ol>

<div class="page-header">
  <h1>
    <%= @federal_state.name %> <%= @year.value %>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <%= for three_months <- Enum.chunk_every(@months, 3) do %>
      <div class="row">
        <%= for month <- three_months do %>
          <div class="col-md-4">
            <div class="row">
              <div class="col-xs-8">
                <h3><%= Enum.at(["Januar", "Februar", "MÃ¤rz", "April", "Mai", "Juni", "Juli", "August", "September", "Oktober", "Novermber", "Dezember"],List.first(List.last(month[:month])).value.month - 1) %></h3>
              </div>
              <div class="col-xs-4">
                <h3 class="text-muted"><%= List.first(List.last(month[:month])).value.year %></h3>
              </div>
            </div>
            <table class="table table-condensed">
              <thead>
                <tr>
                  <th>Mo.</th>
                  <th>Di.</th>
                  <th>Mi.</th>
                  <th>Do.</th>
                  <th>Fr.</th>
                  <th class="active">Sa.</th>
                  <th class="active">So.</th>
                </tr>
              </thead>
              <tbody>
                <%= for week <- month[:month] do %>
                  <tr>
                    <%= for day <- week do %>
                      <%= if day == {} do %>
                        <td></td>
                      <% else %>
                        <td class="text-right <%= day[:css_class] %>">
                          <%= day[:value].day %>.
                        </td>
                      <% end %>
                    <% end %>
                 </tr>
                <% end %>
              </tbody>
            </table>

            <div class="row">
              <div class="col-md-6">
                <%= if length(month[:school_vacation_periods]) > 0 do %>
                  <h4>Schulferien</h4>
                  <dl>
                    <%= for period <- month[:school_vacation_periods] do %>
                      <dt><%= period[:name] %></dt>
                      <dd>
                        <%= if period[:starts_on] == period[:ends_on] do %>
                          <%= period[:starts_on].day %>.<%= period[:starts_on].month %>.
                          <span class="label label-success">1 Tag</span>
                        <% else %>
                         <%= period[:starts_on].day %>.<%= period[:starts_on].month %>. -
                         <%= period[:ends_on].day %>.<%= period[:ends_on].month %>.
                         <span class="label label-success"><%= period[:length] %> Tage</span>
                        <% end %>
                      </dd>
                    <% end %>
                  </dl>
                <% end %>
              </div>
              <div class="col-md-6">
                <%= if length(month[:bank_holiday_periods]) > 0 do %>
                  <h4>Feiertage</h4>
                  <dl>
                    <%= for period <- month[:bank_holiday_periods] do %>
                      <dt><%= period[:name] %></dt>
                      <dd>
                        <%= if period[:starts_on] == period[:ends_on] do %>
                          <%= period[:starts_on].day %>.<%= period[:starts_on].month %>.
                          <span class="label label-info">1 Tag</span>
                        <% else %>
                         <%= period[:starts_on].day %>.<%= period[:starts_on].month %>. -
                         <%= period[:ends_on].day %>.<%= period[:ends_on].month %>.
                         <span class="label label-info"><%= Date.diff(period[:ends_on], period[:starts_on]) + 1 %> Tage</span>
                        <% end %>
                      </dd>
                    <% end %>
                  </dl>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
